          "and": {
            "sel": [
              {
                "or": {
                  "sel": [
                    {
                      "name_regex": ".*AMD.*"
                    },
                    {
                      "name_regex": ".*Advanced Micro Devices.*"
                    }
                  ]
                }
              },
              {
                "platform_regex": "Metal.*"
              }
            ]
          }
